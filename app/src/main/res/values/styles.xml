<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NavTheme" parent="MaterialNavigationDrawerTheme">
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="learningPattern">false</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/primary_dark_material_dark</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/primary_material_light</item>
        <!--<item name="android:listSelector">@drawable/list_item_selector</item>-->
    </style>

    <color name="white">#FFFFFF</color>

</resources>
